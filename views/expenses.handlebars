<!-- Top bar that shows income and  -->
<head>
    <link rel="stylesheet" href="css/expenses.css">
</head>

    <div id="income__bar">
        <div>
            <section id="total__spent">

                {{#select user 1}}
                  <h3>Hello {{first_name}}! Your income is: ${{income}} </h3>
                {{/select}}
                {{#selectAll expenses}}
                  {{amount}}
                {{/selectAll}}
                <!-- ======== Placeholder ======== -->
                {{!-- <h3>Monthly Income: $$$$</h3> --}}
                <!-- ======== Placeholder ======== -->

            </section>
        </div>
    </div>

    <div id="container">
        <div id="expense__list">
            <h2 style="text-align: center">Expense Summary</h2>
            
            <!-- Section for chart display -->
            <section id="chart">
                
                
                <canvas id="myChart" style="margin:0 auto"></canvas>
                <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
                <script>
                    const ctx = document.getElementById('myChart');
                  
                    new Chart(ctx, {
                      type: 'doughnut',
                      data: {
                        labels: ['Dining Out', 'Groceries', 'Gas', 'Subscriptions', 'Utilities', 'Rent', 'Entertainment', 'Savings', 'Misc'],
                        datasets: [{
                          label: 'Monthly Expense',
                          data: [12, 19, 3, 5, 2, 3, 6, 8, 4],
                          borderWidth: 1
                        }]
                      },
                      options: {
                        plugins: {
                            legend: false,
                        },
                      },
                    });
                  </script>



                <!-- ========== DEMO CHART ========== -->
                {{!-- <img src="demo-piechart.png" id="demo-piechart"> --}}
                <!-- ========== DEMO CHART ========== -->

            </section>

            <!-- Section for text summary -->
            <section id="summary__text">
                
                <!-- ========== DEMO TEXT ========== -->
                <p> 
                    Dining Out: 12 <br>
                    Groceries: 19 <br>
                    Gas: 3 <br>
                    Subscriptions: 5 <br>
                    Utilities: 2 <br>
                    Rent: 3 <br>
                    Entertainment: 6 <br>
                    Savings: 8 <br>
                    Misc: 4 <br>
                </p>
                <!-- ========== DEMO TEXT ========== -->

            </section>

        </div>

        <div id="expense__summary">

            <!-- Expense summary and add expense button -->
            <section id="list__title">
                <h2 style="text-align:center">Expense List</h2>
                <button id='addExpense' type="button" class="btn btn-custom">Add Expense</button>
            </section>

            
            <section id="expense__cards">

            <!-- The Modal -->

            <div id="expenseModal" class="addExpenseModal">
              <div class="modal-content">
                <h2>Add Your Expense</h2>
                <select id="expenseCategory">
                  <option value="Dining Out">Dining Out</option>
                  <option value="Gas">Gas</option>
                  <option value="Groceries">Groceries</option>
                  <option value="Utilities">Utilities</option>
                  <option value="Rent">Rent</option>
                  <option value="Misc">Misc.</option>
                  <option value="Other">Other</option>
                </select>
                <input type="text" id="expenseName" placeholder="Expense Name">
                <input type="number" id="expenseAmount" placeholder="Expense Amount">
                <button id="submitExpense" type="button" class="btn btn-custom">Submit Expense</button>
                <span class="close-modal">&times;</span>
              </div>
            </div>


                {{#each expenses}}
                <p class="card">({{category}}) {{description}}: ${{amount}}</p>
                {{/each}}
                
                <!-- ========== DEMO CARDS ========== -->
                {{!-- <p class="card">Demo Card: $$$</p> --}}
                <!-- ========== DEMO CARDS ========== -->

            </section>

        </div>
    </div>
    <script src="/js/expenses.js"></script>
